# Production Environment Configuration
# Copy this to .env on live server and update values

APP_NAME=Templates
APP_ENV=production
APP_KEY=base64:YOUR_PRODUCTION_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database Configuration (Update with production values)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_production_db
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_password

# Broadcasting Configuration for WebSocket
BROADCAST_DRIVER=pusher
BROADCAST_CONNECTION=pusher

# WebSocket Configuration (IMPORTANT: Update PUSHER_HOST)
PUSHER_APP_ID=local
PUSHER_APP_KEY=localkey
PUSHER_APP_SECRET=localsecret

# ⚠️ CHANGE THIS TO YOUR LIVE DOMAIN OR IP
PUSHER_HOST=your-domain.com
# OR use IP address:
# PUSHER_HOST=123.45.67.89

PUSHER_PORT=6001
PUSHER_SCHEME=http
PUSHER_APP_CLUSTER=mt1

# For HTTPS/SSL WebSocket (Optional but Recommended)
# PUSHER_SCHEME=https
# LARAVEL_WEBSOCKETS_SSL_LOCAL_CERT=/path/to/certificate.crt
# LARAVEL_WEBSOCKETS_SSL_LOCAL_PK=/path/to/private.key

# Queue Configuration (Use database or redis for production)
QUEUE_CONNECTION=database
# OR for better performance:
# QUEUE_CONNECTION=redis

# Cache Configuration (Use redis for production)
CACHE_DRIVER=redis
# OR if redis not available:
# CACHE_DRIVER=file

# Redis Configuration (If using redis)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Session Configuration
SESSION_DRIVER=redis
# OR if redis not available:
# SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD="your-app-password"
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# PhonePe Configuration
PHONEPE_MERCHANT_ID=your_merchant_id
PHONEPE_CLIENT_ID=your_client_id
PHONEPE_CLIENT_SECRET=your_client_secret
PHONEPE_SALT_KEY=your_salt_key
PHONEPE_SALT_INDEX=1
PHONEPE_API_URL=https://api.phonepe.com/apis/hermes
PHONEPE_ENV=production
PHONEPE_CALLBACK_URL=https://your-domain.com/payment-link/phonepe-callback

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error
# For debugging WebSocket issues, temporarily use:
# LOG_LEVEL=debug
