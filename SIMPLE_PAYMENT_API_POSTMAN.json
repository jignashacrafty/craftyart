    {
      "name": "4. Check Payment Status (GET)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/payment/status?reference_id={{reference_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "payment",
            "status"
          ],
          "query": [
            {
              "key": "reference_id",
              "value": "{{reference_id}}",
              "description": "Reference ID from create payment link response"
            }
          ]
        },
        "description": "Check payment status using reference ID (GET method)."
      },
      "response": []
    },
    {
      "name": "5. Check Payment Status (POST)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"reference_id\": \"{{reference_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/payment/status",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "payment",
            "status"
          ]
        },
        "description": "Check payment status using reference ID (POST method)."
      },
      "response": []
    },
