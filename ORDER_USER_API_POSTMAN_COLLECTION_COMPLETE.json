      "name": "1. Authentication",
      "item": [
        {
          "name": "Login (Simple JSON)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.success && jsonData.data.token) {",
                  "        pm.collectionVariables.set('token', jsonData.data.token);",
                  "        console.log('Token saved:', jsonData.data.token.substring(0, 50) + '...');",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"orderuser@test.com\",\n  \"password\": \"test123\",\n  \"device_id\": \"postman-test\"\n}"
            },
            "url": {
              "raw": "{{api_base_url}}/order-user-auth/login",
              "host": [
                "{{api_base_url}}"
              ],
              "path": [
                "order-user-auth",
                "login"
              ]
            },
            "description": "Simple login with JSON response\n\nTest Credentials:\n- Email: orderuser@test.com\n- Password: test123"
          }
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{api_base_url}}/order-user-auth/verify-token",
              "host": [
                "{{api_base_url}}"
              ],
              "path": [
